<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ui.dashboard.DashboardFragment">

    <TextView
        android:id="@+id/device_name_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:gravity="center_horizontal"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Connected to: Device Name" />

    <Button
        android:id="@+id/button_to_controls"
        style="@style/MyButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open Debug Buttons"
        app:layout_constraintBottom_toTopOf="@+id/button_to_bluetooth"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/button_to_bluetooth"
        style="@style/MyButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Connect to Bluetooth"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_to_controls" />

    <Button
        android:id="@+id/button_add_segment"
        style="@style/MyButtonStyle"
        android:text="Add Segment" />

    <Button
        android:id="@+id/button_save_config"
        style="@style/MyButtonStyle"
        android:text="Save Configuration" />

    <Button
        android:id="@+id/button_load_config"
        style="@style/MyButtonStyle"
        android:text="Load Configuration" />

    <Button
        android:id="@+id/button_refresh"
        style="@style/MyButtonStyle"
        android:text="Refresh" />

</androidx.constraintlayout.widget.ConstraintLayout>